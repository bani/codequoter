        {% comment %}
            Gallery images
        {% endcomment %}

        {% if product.images.size == 0 %}
        <section class="gallery gallery--productsingle">
            <div class="gallery__inner">
                    <div class="grid">
                    <div class="grid__item desk--hide">
                        <div class="gallery__slide">
                            <img src="{{ 'image__emptymo.png' | asset_url }}" class="slide__image">
                        </div>
                    </div>
                    <div class="grid__item palm--hide lap--hide desk--show">
                        <div class="gallery__slide">
                            <img src="{{ 'image__empty.png' | asset_url }}" class="slide__image">
                        </div>
                    </div>
                </div>

        {% else %}
        <section class="gallery gallery--product{% if settings.use_footer %} hasfooter{% endif %}">
            <div class="gallery__inner">
                {% for image in product.images %}
                <div class="gallery__slide">
                    <img src="{{ image.src | product_img_url: 'master' }}" alt="{{ image.alt }}" class="slide__image">
                </div>
                {% endfor %}
        {% endif %}
            </div>
        </section>

        {% comment %}
            Sidebar on the left, product details and purchasing information
        {% endcomment %}

        <div class="product__panel{% if settings.use_footer %} hasfooter{% endif %}" itemscope itemtype="http://schema.org/Product">
            
            <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />
            <meta itemprop="image" content="{{ product.featured_image.src | product_img_url: 'grande' }}" />

          <h1 itemprop="name"><blockquote>{{ product.title }}</blockquote></h1>
            {% if product.vendor != shop.name %}<h3 itemprop="brand">{{ product.vendor | link_to_vendor }}</h3>{% endif %}
            <h2 class="price-field" itemprop="price"></h2>

            {% if product.available %}
                <form action="/cart/add" method="post" class="product-form">
                    <div class="product-variants"{% if product.variants.size == 1 %} style="display: none;"{% endif %}>
                        <select id="product-select" name="id">
                            {% for variant in product.variants %}
                                <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="grid--full form__qtyprice">
                        <div class="grid__item one-half">
                            <div class="form__qty">
                                <a class="qty__sub"><span class="icon__minus"></span></a>
                                <input type="text" class="qty__num" name="quantity" value="1" min="1" pattern="[0-9]*">
                                <a class="qty__add"><span class="icon__plus"></span></a>
                            </div>
                        </div>
                        <div class="grid__item one-half">
                            <input type="submit" name="add" value="Buy" class="btn__shoppingbag" onclick="_gaq.push(['_trackPageview','/cart/buy']);">
                        </div>
                    </div>
                </form>
            {% else %}
                <p class="soldout" itemprop="availability">Product is currently sold out</p>
            {% endif %}

            {% if product.description != "" %}
            <div class="productpanel__description rte" itemprop="description">
                {{ product.description }}
              <p>[<a href="http://codequoter.com/pages/shipping">Shipping Info</a>] [<a href="http://codequoter.com/pages/tshirt-size-chart">Size Charts</a>]</p>
            </div>
            {% endif %}
            {% include 'like' %}

            {% if collection %}
            <div class="grid--full nav__nextprevious">
                {% if collection.previous_product %}
                    <div class="grid__item one-half">
                        <a href="{{ collection.previous_product }}" class="previous"><span class="icon__arrow-left"></span> Previous</a>
                    </div>
                {% endif %}
                {% if collection.next_product %}
                    <div class="grid__item{% if collection.products.first.handle == product.handle %}{% else %} one-half{% endif %} talign--right">
                        <a href="{{ collection.next_product }}" class="next">Next <span class="icon__arrow-right"></span></a>
                    </div>
                {% endif %}
             </div>
            {% endif %}
        </div>